<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacer_8dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/red_fav"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/card_padding"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="false"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:padding="@dimen/spacer_4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacer_6dp"
            android:layout_marginBottom="@dimen/spacer_4dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginStart="@dimen/spacer_8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/RepeatedTextViewBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/repeated" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ques_repeat"
                    style="@style/RepeatedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacer_2dp"
                    android:paddingEnd="@dimen/spacer_2dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginEnd="@dimen/spacer_8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/marks"
                    style="@style/TimeMarksTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacer_2dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/marks"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/marks_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacer_2dp"
                    android:layout_marginEnd="@dimen/spacer_2dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/greyMedium"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacer_1dp"
            android:layout_marginStart="@dimen/spacer_10dp"
            android:layout_marginEnd="@dimen/spacer_10dp"
            android:background="@color/colorBlack34alpha"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ques_num"
                style="@style/UniversityTextViewBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacer_8dp"
                android:layout_marginTop="@dimen/spacer_12dp"
                android:layout_gravity="top|start"
                android:visibility="gone"/>

            <in.co.erudition.paper.misc.NestedScrollWebView
                android:id="@+id/question_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacer_2dp"
                android:layout_marginBottom="@dimen/spacer_2dp"
                android:padding="@dimen/spacer_12dp"
                android:layout_gravity="center_vertical|start"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>