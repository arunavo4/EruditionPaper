<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/card_padding"
    android:layout_margin="@dimen/spacer_8dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="false"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/linear_layout_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offer_des_tv_margin"
            style="@style/ProfileCardTextViewBold"
            android:text="@string/personal_details"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacer_1dp"
            android:layout_marginStart="@dimen/spacer_12dp"
            android:layout_marginEnd="@dimen/spacer_12dp"
            android:background="@color/colorBlack34alpha"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacer_4dp"
            android:paddingStart="@dimen/spacer_16dp"
            android:paddingEnd="@dimen/spacer_16dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacer_12dp"
                android:layout_marginBottom="@dimen/spacer_12dp"
                android:layout_gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginEnd="@dimen/spacer_16dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_outline_person_24px"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/first_name_tv_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ProfileCardTextViewBold.Red"
                        android:text="@string/not_set"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ProfileCardTextView"
                        android:text="@string/first_name"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacer_1dp"
                android:layout_marginStart="@dimen/spacer_40dp"
                android:layout_marginEnd="@dimen/spacer_4dp"
                android:background="@color/colorBlack34alpha"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacer_12dp"
                android:layout_marginBottom="@dimen/spacer_12dp"
                android:layout_gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginEnd="@dimen/spacer_16dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_outline_person_24px"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/last_name_tv_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ProfileCardTextViewBold.Red"
                        android:text="@string/not_set"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ProfileCardTextView"
                        android:text="@string/last_name"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacer_1dp"
                android:layout_marginStart="@dimen/spacer_40dp"
                android:layout_marginEnd="@dimen/spacer_4dp"
                android:background="@color/colorBlack34alpha"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacer_12dp"
                android:layout_marginBottom="@dimen/spacer_12dp"
                android:layout_gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginEnd="@dimen/spacer_16dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_phone_black_24dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/phone_tv_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ProfileCardTextViewBold.Red"
                        android:text="@string/not_set"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ProfileCardTextView"
                        android:text="@string/phone"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacer_1dp"
                android:layout_marginStart="@dimen/spacer_40dp"
                android:layout_marginEnd="@dimen/spacer_4dp"
                android:background="@color/colorBlack34alpha"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacer_12dp"
                android:layout_marginBottom="@dimen/spacer_12dp"
                android:layout_gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginEnd="@dimen/spacer_16dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_outline_gender_24px"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/gender_tv_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ProfileCardTextViewBold.Red"
                        android:text="@string/not_set"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ProfileCardTextView"
                        android:text="@string/gender"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacer_1dp"
                android:layout_marginStart="@dimen/spacer_40dp"
                android:layout_marginEnd="@dimen/spacer_4dp"
                android:background="@color/colorBlack34alpha"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacer_12dp"
                android:layout_marginBottom="@dimen/spacer_12dp"
                android:layout_gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginEnd="@dimen/spacer_16dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_outline_dob_24px"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date_of_birth_tv_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ProfileCardTextViewBold.Red"
                        android:text="@string/not_set"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ProfileCardTextView"
                        android:text="@string/dob"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>