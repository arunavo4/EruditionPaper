<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#002B608A"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="0dp"
    app:cardCornerRadius="2dp"
    app:contentPaddingBottom="0dp"
    app:cardPreventCornerOverlap="true"
    android:focusable="true"
    android:clickable="true"
    app:cardUseCompatPadding="false"
    app:cardElevation="0dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/university_book" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center|top"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/university_logo"
            android:layout_width="@dimen/card_image_view"
            android:layout_height="@dimen/card_image_view"
            android:layout_margin="12dp"
            android:scaleType="fitCenter"
            android:background="@drawable/bg_white"
            app:srcCompat="@drawable/ic_pencil"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_university_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/UniversityTextView"
            android:layout_marginBottom="10dp"
            android:text="@string/university"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>