<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.co.erudition.paper.activitiy.PaperActivity"
    tools:showIn="@layout/activity_paper">

    <LinearLayout
        android:id="@+id/paper_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/recycler_view_offset">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeToRefresh3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_paper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                android:padding="@dimen/item_offset"
                android:background="@color/colorTransparent"/>

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/selection_chap_or_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/recycler_view_offset"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <include android:id="@+id/chapter_btn"
            layout="@layout/paper_btn_chap"/>

        <include android:id="@+id/year_btn"
            layout="@layout/paper_btn_year"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_paper_found"
        android:paddingTop="@dimen/spacer_32dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/TopTextView"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:text="@string/no_papers"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
