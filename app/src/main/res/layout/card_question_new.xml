<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacer_8dp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/CodeFullTextView"
        android:visibility="gone"/>

    <include layout="@layout/card_question"/>

    <View
        android:id="@+id/nav_spacer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:visibility="gone"/>

    <View
        android:id="@+id/nav_spacer_ad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ad_view_height"
        android:layout_gravity="bottom"
        android:visibility="gone"/>

</LinearLayout>