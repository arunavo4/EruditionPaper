<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_width_chap_year"
    android:layout_height="@dimen/card_height_chap_year"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginLeft="@dimen/card_margin_left_right"
    android:layout_marginRight="@dimen/card_margin_left_right"
    android:layout_marginBottom="@dimen/card_margin_top_bottom"
    android:layout_marginTop="@dimen/card_margin_top_bottom"
    android:padding="@dimen/card_padding_all"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacer_12dp"
        android:layout_marginEnd="@dimen/spacer_12dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_year_or_chap"
            style="@style/ChapYearTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:text="@string/chapter_wise_new" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tint="@color/colorWhite"
            android:layout_weight="0"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_book" />

    </LinearLayout>

</android.support.v7.widget.CardView>