<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/img_no_internet"
    android:background="@color/default_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/toolbar_offset"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/coming_soon_bg"/>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TopTextView"
                    android:text="@string/coming_soon_top"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_no_net"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/toolbar_offset"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/coming_soon_dialog" />

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:layout_width="@dimen/bottom_tv_width_max"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/BottomTextView"
            android:text="@string/coming_soon_bottom"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_notify"
            style="@style/AddButton"
            android:layout_margin="@dimen/btn_margin"
            android:layout_gravity="center"
            android:elevation="8dp"
            android:text="@string/notify_me"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/greyDark_alpha80"
        android:layout_marginStart="@dimen/spacer_16dp"
        android:layout_marginTop="@dimen/nav_bar_height"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/spacer_6dp"
        android:layout_gravity="top|start"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>

</FrameLayout>
